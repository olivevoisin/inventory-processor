# Configuration du serveur
PORT=3000
NODE_ENV=development

# JWT (JSON Web Token)
JWT_SECRET=votre-jwt-secret-supersecurise-a-changer
JWT_EXPIRES_IN=7d

# Google Sheets
GOOGLE_SHEETS_DOC_ID=your-google-sheets-document-id
GOOGLE_SHEETS_CLIENT_EMAIL=your-service-account-email@googleservices.com
GOOGLE_SHEETS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYourPrivateKeyHere\n-----END PRIVATE KEY-----\n"

# Deepgram pour la reconnaissance vocale
DEEPGRAM_API_KEY=your-deepgram-api-key

# Google Cloud Translation
TRANSLATION_API_KEY=your-translation-api-key

# Planificateur de traitement de factures
INVOICE_SCHEDULER_ENABLED=true
INVOICE_SCHEDULER_CRON="0 0 * * *"
INVOICE_SOURCE_DIR=./data/invoices/new
INVOICE_PROCESSED_DIR=./data/invoices/processed
INVOICE_FAILED_DIR=./data/invoices/failed

# Répertoires d'upload
VOICE_UPLOAD_DIR=./uploads/voice
INVOICE_UPLOAD_DIR=./uploads/invoices
MAX_FILE_SIZE=52428800

# Email (pour les notifications)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=user@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@inventory-app.com
ADMIN_EMAIL=admin@example.com

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_DIR=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# Frontend URL (pour les liens dans les emails)
FRONTEND_URL=http://localhost:8080

# Autres paramètres
ALLOW_PUBLIC_REGISTRATION=false
DEFAULT_USER_LOCATIONS=boissonMaison,boissonBicoque
