{
  "all": true,
  "check-coverage": true,
  "branches": 80,
  "lines": 85,
  "functions": 85,
  "statements": 85,
  "include": [
    "modules/**/*.js",
    "utils/**/*.js",
    "routes/**/*.js"
  ],
  "exclude": [
    "**/*.test.js",
    "**/__tests__/**",
    "**/node_modules/**",
    "**/coverage/**"
  ],
  "reporter": [
    "lcov",
    "text-summary",
    "html"
  ],
  "report-dir": "./coverage"
}